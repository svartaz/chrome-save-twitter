{
  "manifest_version": 3,
  "name": "twitter-save",
  "version": "1.0",
  "description": "save text and images on twitter.com",
  "permissions": ["activeTab", "storage", "downloads", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ]
}
